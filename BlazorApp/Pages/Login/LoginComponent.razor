@page "/Login"
@using BlazorApp.Dtos
<style>
    .login-page {
        background-image: url("../Assets/images/bg.jpg");
        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<div class="login-page">
    <div class="login-box">
        <div class="login-logo" />
        <div class="card">
            <div class="card-body login-card-body">
                <h1 class="text-center"><strong>AXCOM</strong></h1>
                <p class="login-box-msg">PORTAL DE GESTION DE KIOSCOS</p>
                    <EditForm Model="@login" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <p><strong>Correo Electrónico</strong></p>
                        <div class="input-group mb-3">
                            <InputText @bind-Value="@login.email" type="email" class="form-control" placeholder="Email" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <p><strong>Contraseña</strong></p>
                        <div class="input-group mb-3">
                            <InputText @bind-Value="@login.password" type="password" class="form-control" placeholder="Password" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <p class="text-center">message</p>
                        <div class="mb-1" style="display:flex; justify-content:center;">

                            <button style="min-width:200px" class="btn-lg  btn-success" type="submit"> Entrar </button>
                        </div>
                    </EditForm>
                    <p class="mb-4 text-center">
                        <a>¿Olvidaste tu Contraseña?</a>
                    </p>
               
                @*<button class="btn-lg btn-secondary" @onclick="CreateUser">Registrar</button>*@
            </div>
        </div>
    </div>
</div>

@code {
    LoginDto login = new LoginDto();

